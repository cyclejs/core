{
  "framework": "mocha",
  "serve_files": [
    "tests-bundle.js"
  ],
  "src_files": [
    "test/browser/*.js",
    "test/common/*.js"
  ],
  "before_tests": "browserify test/browser/index.js -d -t babelify -o tests-bundle.js",
  "on_exit": "rm tests-bundle.js",
  "launchers": {
    "Node": {
      "command": "mocha tests.js -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "Chrome",
    "PhantomJS"
  ]
}
