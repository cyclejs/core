{
  "compilerOptions": {
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "ES5",
    "outDir": "lib/",
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
   "files": [
     "src/index.ts"
   ],
   "exclude": [
     "node_modules"
   ]
}
